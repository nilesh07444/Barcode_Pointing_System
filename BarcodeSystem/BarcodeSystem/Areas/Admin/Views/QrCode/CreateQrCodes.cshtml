@{
    ViewBag.Title = "Create QR Codes";
}

<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col">
                    <div class="page-header-left">
                        <h3>
                            Create QR Codes
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/admin/dashboard"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item"><a href="/admin/qrcode">QR Codes</a></li>
                        <li class="breadcrumb-item active">Create QR Codes</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Create QR Codes</h5>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("SaveBarcodes", "QrCode", FormMethod.Post, new { @id = "SaveBarcodesFormId", @class = "needs-validation", enctype = "multipart/form-data", role = "form" }))
                        {
                            
                        <div class="form-group row">
                            <label class="col-xl-3 col-md-4" for="Amount">Amount *</label>               
                            <select class="form-control col-md-8" id="Amount" name="Amount" >
                                <option value="0">--Select-</option>
                                <option value="15">₹20 - 15pts</option>
                                <option value="22">₹30 - 22pts</option>
                                <option value="35">₹50 - 35pts</option>
                            </select>                           
                            <lable class="col-xl-3 col-md-4"></lable>
                        </div>
                          <div class="form-group row">
                            <label class="col-xl-3 col-md-4" for="Qty">Qty *</label>                           
                            <input class="form-control col-md-8 text-box single-line" id="Qty" maxlength="8" name="Qty" placeholder="Enter Qty of Barcodes" type="number" value="0">
                            <lable class="col-xl-3 col-md-4"></lable>
                        </div>                            
                            <div class="form-group row">
                                <lable class="col-xl-3 col-md-4"></lable>
                                <button type="button" class="btn btn-primary" style="margin-right:10px;" onclick="SaveQrCode();" >Generate & Save</button>
                                <button type="button" class="btn btn-danger" id="btnCancel">Cancel</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>

<script src="~/Content/assets/js/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
<link href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css" rel="Stylesheet" type="text/css" />

<script>
    $(document).on("click", "#btnCancel", function () {
        window.location.href = "/admin/qrcode";
    });

    function SaveQrCode() {
        StartLoading();
        var flgvalid = true;
        if ($("#Amount").val() == "" || $("#Amount").val() == "0") {
            alert("Please select amount")
            flgvalid = false;
        }
        else if ($("#Qty").val() == "" || $("#Qty").val() == "0") {
            alert("Please Enter Qty more than 0")
            flgvalid = false;
        }

        if (flgvalid == true) {
        var URL = '@Url.Action("SaveBarcodes", "QrCode")';
        jQuery.ajax({
        type: 'POST',
        async: true,
        url: URL + "?Amount=" + $('#Amount').val() + "&Qty=" + $('#Qty').val(),
        success: function (result) {
            if (result.indexOf("Success") >= 0) {
                var arrres = result.split('^');
                var ids = arrres[1];
                alert("QR Code Save and Generated");
                window.open('/admin/qrcode/displaybarcodes?Id=' + ids);
                //location.reload();
            }
            else {
            }
               StopLoading();
        },
        error: function (resultData) {
            StopLoading();
            console.log("error");

        }
     });
        }
        else {
            StopLoading();
        }


    }

</script>